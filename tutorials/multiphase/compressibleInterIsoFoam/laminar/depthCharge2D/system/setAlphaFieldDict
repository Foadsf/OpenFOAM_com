FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

field alpha.water;
type composedFunction;
mode subtract;
composedFunction
{
    plane
    {
        type plane;
        origin (0 1. 0);
        normal (0 -1 0);  
    }

    sphere
    {
        type cylinder;
        radius 0.1;
        origin (0.5 0.5 0);
        direction (0 0 1);
        scale -1;
    }

}
